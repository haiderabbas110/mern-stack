<%- include('include/header'); %>
<h1>Item List</h1>
<table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Publish Date</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for(let book of books){ %>
                <tr>
                    <td>
                        <%= book._id%>
                    </td>
                    <td>
                        <%= book.name %>
                    </td>
                    <td>
                        <%= book.author %>
                    </td>
                    <td>
                        <%= book.published %>
                    </td>

                    <td>
                        <% for(let user of book.users){ %>
                            <%= user.name %>

                        <% } %>
                    </td>
                    <td>
                        <a href="http://localhost:8080/items/update/<%=book._id%>" class="edit"
                            data-toggle="modal">Edit</a>
                        <a href="http://localhost:8080/delete/<%=book._id%>" class="delete">Delete</i></a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>

    </body>

    </html>